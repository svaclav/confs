function .. (){
    local arg=${1:-1};
    local dir=""
    while [ $arg -gt 0 ]; do
        dir="../$dir"
        arg=$(($arg - 1));
    done
    cd $dir #>&/dev/null
}

function au {
    sudo ps auxf | grep $1 | grep -v "grep $1"
}

function cs () {
	cd "$1"
	ls -alF
}

function f() { sudo find . -iname '*'$1'*' ; }

function ips () {
  sudo lsof -i -n | grep -oP ">(\d{1,3})(\.\d{1,3}){3}" | sort | uniq -c | sort
}


function jsn () {
        python -m json.tool
}

function ta {
        sudo tac $1 | less
}
